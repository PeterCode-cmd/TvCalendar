<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgmain"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz rok premiery:"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="8dp" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/yearSpinner"
        android:layout_width="200dp"
        android:background="@drawable/edittext_background"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sortuj po:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="8dp" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sortSpinner"
        android:layout_width="200dp"
        android:background="@drawable/edittext_background"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Minimalna ilość głosów:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="8dp" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/votesSpinner"
        android:layout_width="200dp"
        android:background="@drawable/edittext_background"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz streaming: "
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/providerSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center"
        android:spinnerMode="dropdown"
        android:entries="@array/provider_options"
        android:background="@drawable/edittext_background" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz streaming: "
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/genresSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center"
        android:spinnerMode="dropdown"
        android:entries="@array/provider_options"
        android:background="@drawable/edittext_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/applyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zastosuj"
        android:background="@drawable/bgbuttons"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"/>
</LinearLayout>
